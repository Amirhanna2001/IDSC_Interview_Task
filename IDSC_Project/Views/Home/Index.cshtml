@{
    ViewData["Title"] = "Home";
}

<div class="hero-section" style="background-color: #f8f9fa; padding: 60px 20px; text-align: center;">
    <h1 class="display-3" style="font-weight: 700; color: #343a40;">Welcome to Our Application!</h1>
    <p style="font-size: 1.2rem; color: #6c757d;">Empowering you with the best tools and resources for success.</p>
 </div>

<div class="features-section" style="padding: 60px 20px; background-color: #ffffff;">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <h3 style="color: #343a40;">Feature One</h3>
                <p style="color: #6c757d;">Discover how we make your work faster and easier.</p>
            </div>
            <div class="col-md-4">
                <h3 style="color: #343a40;">Feature Two</h3>
                <p style="color: #6c757d;">Innovative tools tailored to your needs.</p>
            </div>
            <div class="col-md-4">
                <h3 style="color: #343a40;">Feature Three</h3>
                <p style="color: #6c757d;">Seamless integration with modern platforms.</p>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="admin-section" style="padding: 40px 20px; background-color: #343a40; color: #ffffff; text-align: center;">
        <h2>Welcome Back, Admin!</h2>
        <p>Manage the system and monitor activities effectively.</p>
        <a href="/admin" class="btn btn-light btn-lg" style="margin-top: 20px;">Go to Admin Panel</a>
    </div>
}

<footer style="background-color: #343a40; color: #ffffff; padding: 20px 0; text-align: center;">
    <p>&copy; 2024 IDSC. All rights reserved.</p>
    <a asp-action="privacy" style="color: #17a2b8;">Privacy Policy</a> 
</footer>
